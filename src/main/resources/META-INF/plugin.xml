<idea-plugin>
    <id>com.caojx.MyBatisCodeGenerator</id>
    <name>MyBatisCodeGenerator</name>
    <vendor email="caojx_wy@163.com" url="">caojx</vendor>

    <description><![CDATA[
        <em>Simple MyBatisCodeGenerator Plugin </em>
        <em>1.It supports code generation in three styles: MyBatis, TkMyBatis and MybatisPlus</em>
        <em>2.Support customized generation of entity, mapper, mapperXml, service, serviceImpl and controller</em>

        <br>
        <em>MyBatis 代码生成插件</em>
        <em>1.支持MyBatis、TkMyBatis、MyBatisPlus 三种风格代码生成</em>
        <em>2.支持定制化生成entity、mapper、mapperXml、service、serviceImpl、Controller</em>
    ]]></description>

    <!--版本兼容从2019.3开始-->
    <idea-version since-build="193"/>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <!--持久化-->
        <projectService serviceImplementation="com.caojx.idea.plugin.persistent.PersistentStateService"/>

        <!--工具栏-->
        <toolWindow id="MyBatisCodeGenerator" factoryClass="com.caojx.idea.plugin.ui.GeneratorWindowFactory" anchor="right"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="MyBatisCodeGeneratorId" class="com.caojx.idea.plugin.action.GeneratorAction" text="MyBatisCodeGenerator" description="生成代码">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
